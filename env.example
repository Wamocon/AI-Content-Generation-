# ========================================
# FIAE AI CONTENT FACTORY - ENVIRONMENT CONFIG
# ========================================
# Copy this file to .env and update with your actual values

# ========================================
# GOOGLE CLOUD CONFIGURATION
# ========================================
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_CREDENTIALS_PATH=credentials/google-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your-source-folder-id
GOOGLE_DRIVE_REVIEW_FOLDER_ID=your-review-folder-id
GOOGLE_DRIVE_DONE_FOLDER_ID=your-done-folder-id
GOOGLE_SHEETS_ID=your-master-sheet-id

# ========================================
# AI MODEL CONFIGURATION
# ========================================
# Gemini 2.0 Flash Exp (using as 2.5 Pro is not yet available)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_NAME=gemini-2.0-flash-exp
GEMINI_MODEL_FALLBACK=gemini-1.5-pro-002
GEMINI_MODEL_TEMPERATURE=0.7
GEMINI_MODEL_TOP_P=0.9
IMAGEN_MODEL_NAME=imagegeneration@006

# ========================================
# GAMMA AI CONFIGURATION
# ========================================
GAMMA_API_KEY=your-gamma-api-key-here
GAMMA_THEME_NAME=WMC
GAMMA_API_URL=https://api.gamma.app
GAMMA_EXPORT_FORMAT=pptx
GAMMA_RATE_LIMIT=50
GAMMA_POLL_INTERVAL=5
GAMMA_MAX_POLL_ATTEMPTS=60

# ========================================
# ELEVENLABS CONFIGURATION
# ========================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ========================================
# APPLICATION CONFIGURATION
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=AI Content Factory
API_VERSION=2.0.0
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>

# ========================================
# FILE PROCESSING CONFIGURATION
# ========================================
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=.docx,.pdf,.txt,.png,.jpg,.jpeg,.gif,.bmp
TEMP_DIR=temp
MAX_DOCUMENT_WORDS=50000
CHUNK_SIZE=10000
ENABLE_CHUNKING=true

# ========================================
# RETRY CONFIGURATION
# ========================================
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF_FACTOR=2.0

# ========================================
# LANGUAGE CONFIGURATION
# ========================================
DEFAULT_LANGUAGE=de
OUTPUT_LANGUAGE=de

# ========================================
# MONITORING & LOGGING
# ========================================
ENABLE_MONITORING=true
ENABLE_AUDIT_LOGS=true
ENABLE_ACCESS_LOGS=true
ENABLE_DATA_LOGS=true

# ========================================
# SCALABILITY CONFIGURATION
# ========================================
MAX_CONCURRENT_JOBS=5
QUEUE_SIZE=100
TIMEOUT_SECONDS=300

# ========================================
# COST CONTROL
# ========================================
BUDGET_LIMIT=10.0
BUDGET_CURRENCY=EUR
COST_ALERT_THRESHOLD=8.0
AUTO_STOP_SERVICES=true

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=60
ENABLE_COMPRESSION=true

# ========================================
# N8N INTEGRATION
# ========================================
N8N_URL=http://localhost:5678
N8N_USER=admin
N8N_PASSWORD=admin123
N8N_ENCRYPTION_KEY=your-encryption-key
N8N_POSTGRES_PASSWORD=your-postgres-password
AI_CONTENT_FACTORY_URL=http://localhost:8000

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Set to true for development mode
DEBUG=false
RELOAD=false

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Generate a secure secret key for your application
SECRET_KEY=your-secret-key-here
# JWT settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# DATABASE CONFIGURATION
# ========================================
# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=chroma_db
CHROMA_COLLECTION_NAME=fiae_content_factory

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# ========================================
# WEBHOOK CONFIGURATION
# ========================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

