# Backend API URL (default for local development)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend WebSocket URL (default for local development)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Environment
NODE_ENV=development

